generator client {
  provider = "prisma-client-js"
}

generator nexusPrisma {
  provider = "nexus-prisma"
}

datasource db {
  provider          = "mysql"
  url               = env("CLEARDB_AQUA_URL")
  shadowDatabaseUrl = env("CLEARDB_PUCE_URL")
}

model Product {
  id                  Int       @id @default(autoincrement())
  qruid               String    @unique
  passport_definition String?
  has_deposit         Boolean
  deposit_amount      Float
  brand_id            String
  date_of_activation  DateTime  @default(now())
  retailer_id         String?
  customer_id         String?
  date_of_return      DateTime?
}
